#include <iostream>
using namespace std;

int main(){
	int n,m;
	int l1,l2;
	int cnt;
	int tmp1, tmp2;
	cin >> n >> m;
	l1=1;
	l2=1;
	cnt=1;

	if(n>2){
		if(m<=4){
			cout << m;
			return 0;
		}
		else if(m<7){
			cout << "4";
			return 0;
		}
		else{
			cout << m-2;
			return 0;
		}
	}
	else if(n==2){
		if(m<3){
			cout << "1";
			return 0;
		}
		else if(m<5){
			cout << "2";
			return 0;
		}
		else if(m<7){
			cout << "3";
			return 0;
		}
		else{
			cout << "4";
			return 0;
		}
	}
	else{
		cout << "1";
		return 0;
	}
}
